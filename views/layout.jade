!!!
html(manifest="mythexpress.appcache")
  head
    title MythExpress Loading&hellip;
    if isIOS
      meta(name="apple-mobile-web-app-capable", content="yes")
      meta(name="viewport", content="user-scalable=no")
    if isWebApp
      meta(name="apple-mobile-web-app-status-bar-style", content="black")
      link(rel="apple-touch-startup-image", href="img/splash/Banksy-Portrait.png", media="(max-device-width: 768px) and (orientation: portrait)")
      link(rel="apple-touch-startup-image", href="img/splash/Banksy-Landscape.png", media="(max-device-width: 768px) and (orientation: landscape)")
      link(rel="apple-touch-startup-image", href="img/splash/Banksy-Portrait-Retina.png", media="(max-device-width: 768px) and (orientation: portrait) and (-webkit-device-pixel-ratio: 2)")
      link(rel="apple-touch-startup-image", href="img/splash/Banksy-Landscape-Retina.png", media="(max-device-width: 768px) and (orientation: landscape) and (-webkit-device-pixel-ratio: 2)")
    if app.settings.env === "production"
      link(rel="stylesheet", href=(isWebApp ? "css/dark-hive/webapp.css" : "css/dark-hive/browser.css"))
    else
      link(rel="stylesheet", href="css/HTML5Reset.css")
      link(rel="stylesheet", href="css/dark-hive/jquery-ui-1.8.17.custom.css")
      link(rel="stylesheet", href="css/lightbox.css")
      link(rel="stylesheet", href="css/mythexpress.css")
      link(rel="stylesheet", href=(isWebApp ? "css/webapp.css" : "css/browser.css"))
    if app.settings.env === "production"
      script(type="text/javascript", src="js/all.js")
    else
      script(type="text/javascript", src="js/jquery-1.7.1.js")
      script(type="text/javascript", src="js/jquery-ui-1.8.17.custom.js")
      script(type="text/javascript", src="js/history.js")
      script(type="text/javascript", src="js/history.adapter.jquery.js")
      script(type="text/javascript", src="js/jquery.cookie.js")
      script(type="text/javascript", src="js/lightbox.js")
      script(type="text/javascript", src="js/mythexpress.js")
  body
    #Content
      #Context.mx-Hidden= JSON.stringify(Context)
    #Header!= partial("header")
    #Views.mx-Hidden!= partial("ui/viewspopup")
    #Footer
    #InfoDialog!= partial("info/infodialog")