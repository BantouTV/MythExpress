.mn-Clickable.mn-Recording.mn-Data(data-FileName=episode.FileName, data-ChanId=episode.Channel.ChanId, data-StartTs=episode.Recording.StartTs, data-Title=episode.Title)
  img.mn-Clickable.mn-RecordingPreview(src="http://" + MythBackend + "/Content/GetPreviewImage?ChanId=" + episode.Channel.ChanId + "&StartTime=" + episode.Recording.StartTs + "&Width=128",alt=episode.SubTitle)
  if typeof(ShowTitle) != 'undefined'
    span.mn-Title= episode.Title
  else
    if episode.SubTitle.length > 0
      span= episode.SubTitle
    else
      if episode.Description.length > 0
        span= episode.Description
      else
        span= episode.StartTime