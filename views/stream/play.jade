if typeof(Width) === "undefined"
  video.nm-VideoBox(controls,autoplay,src=FullURL)
else
  video.nm-VideoBox(controls,autoplay,src=FullURL,width=Width,height=Height,data-W=Width,data-H=Height)

if Info
  .mx-TextColumn.mx-TextBubble
    p= Info.SubTitle
    p= Info.Description
    if Info.Airdate
      p= "Airdate: " + Info.Airdate

.mx-TextColumn.mx-ControlBubble
  div
    if !isIOS
      button.mx-Clickable.mx-Move(data-offset="-300") -5m
    button.mx-Clickable.mx-Move(data-offset="-30") -30s
    button.mx-Clickable.mx-Move(data-offset="-5") -5s
    button.mx-Clickable.mx-Move(data-offset="30") +30s
    button.mx-Clickable.mx-Move(data-offset="120") +2m
    button.mx-Clickable.mx-Move(data-offset="300") +5m
  div
    button.mx-Clickable.mx-Shrink Shink
    button.mx-Clickable.mx-Original Normal
    button.mx-Clickable.mx-Zoom Zoom
    button.mx-Clickable.mx-Max Max
